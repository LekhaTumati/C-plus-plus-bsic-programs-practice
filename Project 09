#include <iostream>

using namespace std;

int main()
{
    int num = 5;
    cout << "The number is " << num << endl;
    num++;
    cout << "The number + 1 is " << num << endl;
    num++;
    cout << "The number + 2 is " << num << endl;
    num--;
    cout << "The number - 1 is " << num << endl;
    num--;
    cout << "The number - 2 is " << num << endl;
    return 0;
}
